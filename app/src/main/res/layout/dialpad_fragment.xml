<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:paddingBottom="5dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <sdlcjt.cn.app.sdlcjtphone.ui.view.LineView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        app:line_color="@color/line"/>

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_dialpad_frag_number"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"/>

    </LinearLayout>

    <sdlcjt.cn.app.sdlcjtphone.ui.view.LineView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        app:line_color="@color/line"/>

    <include layout="@layout/dialpad_one_include"/>

    <sdlcjt.cn.app.sdlcjtphone.ui.view.LineView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        app:line_color="@color/line"/>

    <include layout="@layout/dialpad_two_include"/>


    <sdlcjt.cn.app.sdlcjtphone.ui.view.LineView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        app:line_color="@color/line"/>


    <include layout="@layout/dialpad_three_include"/>


    <sdlcjt.cn.app.sdlcjtphone.ui.view.LineView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        app:line_color="@color/line"/>


    <include layout="@layout/dialpad_four_include"/>

    <sdlcjt.cn.app.sdlcjtphone.ui.view.LineView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        app:line_color="@color/line"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_dialpad_frag_number_add"
                android:layout_gravity="center"
                android:layout_margin="@dimen/space_10"
                android:background="@drawable/selector_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/call_bg"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/iv_dialpad_frag_number_call"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_call_white"
                    android:layout_width="@dimen/space_30"
                    android:layout_height="@dimen/space_30"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_dialpad_frag_number_del"
                android:layout_gravity="center"
                android:layout_margin="@dimen/space_10"
                android:background="@drawable/selector_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>