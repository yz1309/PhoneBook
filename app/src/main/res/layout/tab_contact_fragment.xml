<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:background="@color/commom_bg_colors"
              android:orientation="vertical"
              android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_main_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/tab_contact"
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_20"/>

        <LinearLayout
            android:id="@+id/ll_search"
            android:background="@drawable/common_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/space_10"
            android:paddingLeft="@dimen/space_10">

            <ImageView
                android:layout_width="@dimen/space_30"
                android:layout_height="@dimen/space_30"
                android:src="@mipmap/icon_search_gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add"
            android:background="@drawable/common_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/space_10"
            android:paddingLeft="@dimen/space_10">

            <ImageView
                android:layout_width="@dimen/space_30"
                android:layout_height="@dimen/space_30"
                android:src="@mipmap/icon_contact_add"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/contact_list"/>
</LinearLayout>