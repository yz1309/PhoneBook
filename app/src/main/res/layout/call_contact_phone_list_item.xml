<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@drawable/common_bg"
                android:minHeight="?android:attr/listPreferredItemHeightSmall"
                android:gravity="center_horizontal"
                android:padding="@dimen/space_5"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_contact_phone_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
        android:paddingRight="?android:attr/listPreferredItemPaddingRight"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"/>

    <TextView
        android:id="@+id/tv_contact_phone_list_item_phone"
        android:textColor="@color/text_999"
        android:layout_below="@id/tv_contact_phone_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
        android:paddingRight="?android:attr/listPreferredItemPaddingRight"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"/>

    <ImageView
        android:id="@+id/iv_contact_phone_list_item_call"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/space_10"
        android:layout_gravity="center"
        android:background="@drawable/call_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>